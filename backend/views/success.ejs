<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || '정품 인증 성공 - Pre.p Mood' %></title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/fonts-archive/Paperlogy/Paperlogy.css" type="text/css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/jsbarcode@3.11.5/dist/JsBarcode.all.min.js"></script>
    <style>
        @font-face {
            font-family: 'NanumBarunGothic';
            src: url('/static/fonts/NanumBarunGothic.ttf') format('truetype');
            font-weight: normal;
            font-style: normal;
            font-display: swap;
        }
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        html, body {
            font-family: 'Paperlogy', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Noto Sans KR', sans-serif;
            background: #d9d9d9;
            min-height: 100vh;
        }
        
        body {
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 60px 24px;
        }
        
        .stage-panel {
            height: 1033px;
            background: #E6E6E6;
            padding: 80px 48px 80px 48px;
            border-radius: 2px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.25);
            max-width: 616px;
            animation: fadeIn 0.5s ease-in;
        }
        
        .container {
            background: #E6E6E6;
            height: 918px;
            width: 469.8px;
            border-radius: 0;
            box-shadow: none;
            overflow: visible;
            display: flex;
            flex-direction: column;
        }
        
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        .header-bar {
            height: 147.3px;
            box-sizing: border-box;
            background: rgba(51, 51, 51, 1);
            color: white;
            padding: 58px 24px 50px 24px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid rgba(0, 0, 0, 0.35);
        }
        
        .brand-name { margin-left: 38px; margin-bottom: 2px; }
        .header-date {
            font-size: 11.6px;
            letter-spacing: 1.7px;
            font-weight: 500;
            color: rgba(255, 255, 255, 0.9);
            margin-right: 36px;
        }
        
        .card-content {
            padding: 51px 64px 15.5px 63.7px;
            background: white;
            position: relative;
            overflow: hidden;
        }
        
        .card-content::before {
            content: '';
            display: block;
            height: 0.1px;
            background: #d8d8d8;
            margin: 16px 0 0 0;
            width: 100%;
        }
        
        .card-content-bottom {
            margin: 0;
            background: #E6E6E6;
            flex: 1;
            padding-bottom: 24px;
            box-sizing: border-box;
        }
        
        .info-table { width: 100%; margin-bottom: 53px; }
        .info-row {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            padding: 26.5px 0 0 2px;
            border-bottom: none;
        }
        .info-table .info-row:nth-child(2) { padding: 24px 0 0 2px; }
        .info-table .info-row:nth-child(3) { padding: 24px 0 0 2px; }
        .info-table .info-row:nth-child(4) { padding: 24px 0 0 2px; }
        
        .info-label {
            font-size: 12px;
            color: rgba(128, 128, 128, 1);
            font-weight: 600;
            text-transform: uppercase;
            min-width: 100px;
            letter-spacing: 1.5px;
        }
        
        .info-value {
            font-size: 12px;
            letter-spacing: 1.35px;
            padding-right: 1px;
            color: rgba(128, 128, 128, 1);
            font-weight: 500;
            text-align: right;
            flex: 1;
            word-break: break-word;
        }
        
        .ticket-divider-wrap {
            position: relative;
            margin: 22px -65px 18px -65px;
            height: 2px;
            border-top: none;
            background-image: repeating-linear-gradient(
                to right,
                #d0d0d0 0px,
                #d0d0d0 10px,
                transparent 10px,
                transparent 20px
            );
            background-size: 30px 2px;
            background-position: 0 0;
            background-repeat: repeat-x;
            overflow: visible;
        }
        
        .ticket-divider-wrap::before {
            content: '';
            position: absolute;
            left: calc(-36px / 2);
            top: 50%;
            transform: translateY(-50%);
            width: 36px;
            height: 33px;
            border-radius: 50%;
            background: #E6E6E6;
            z-index: 10;
        }
        
        .ticket-divider-wrap::after {
            content: '';
            position: absolute;
            right: calc(-36px / 2);
            top: 50%;
            transform: translateY(-50%);
            width: 36px;
            height: 33px;
            border-radius: 50%;
            background: #E6E6E6;
            z-index: 10;
        }
        
        .barcode-section {
            text-align: center;
            margin: 37px -64px 32px -63.7px;
            width: calc(100% + 64px + 63.7px);
            box-sizing: border-box;
        }
        
        .barcode-container {
            width: var(--barcode-width, 280px);
            margin: 0 12px;
        }
        
        .barcode-container img,
        .barcode-container svg { padding-right: 14px; }
        
        .barcode-text {
            font-size: 12.5px;
            padding-top: 9px;
            color: #231815;
            letter-spacing: 2.55px;
            font-family: 'Paperlogy';
            font-weight: 400;
            margin: 8px 64px -30px 63.7px;
        }
        
        .verified-pill {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            width: 168px;
            height: 56px;
            background: #1a1a1a;
            color: white;
            border: 1px solid #808080;
            border-radius: 28px;
            font-size: 11.5px;
            letter-spacing: 1.6px;
            font-weight: 500;
            text-align: center;
            margin-top: 13px;
            margin-bottom: -50px;
            box-sizing: border-box;
            padding-right: 6px;
            padding-bottom: 2px;
        }
        
        .verified-pill .check-icon {
            display: flex;
            align-items: center;
            justify-content: center;
            flex-shrink: 0;
            transform: translateX(-9px);
        }
        
        .verified-pill .check-icon-img {
            width: 20px;
            height: 20px;
            object-fit: contain;
            display: block;
        }
        
        .info-text {
            background: #f5f5f5;
            padding: 19px 20px 15px 27.5px;
            border-radius: 8px;
            margin: 23px 0 0;
            text-align: left;
            font-family: 'Inter', sans-serif;
            border: 1px solid rgba(0, 0, 0, 0.31);
        }
        
        .info-text p {
            font-size: 10.5px;
            letter-spacing: 1.5px;
            color: #666;
            line-height: 1.8;
            margin-bottom: 3px;
            font-family: 'Inter', sans-serif;
        }
        
        .info-text p:last-child { margin-bottom: 0; font-weight: 400; }
        
        .button-section { margin-top: 35px; }
        
        .btn {
            display: block;
            width: 100%;
            padding: 21px 16px;
            border-radius: 8px;
            font-size: 11.5px;
            letter-spacing: 1.6px;
            font-weight: 500;
            text-align: center;
            text-decoration: none;
            cursor: pointer;
            transition: all 0.2s;
            border: none;
            font-family: inherit;
        }
        
        .btn:last-child { margin-bottom: 0; }
        .btn-primary { margin-bottom: 12px; background: #1a1a1a; color: white; }
        .btn-primary:hover { background: #333; }
        .btn-secondary { background: white; color: #1a1a1a; border: 1px solid #E6E6E6; }
        .btn-secondary:hover { background: #f9f9f9; }
        
        @media (max-width: 768px) {
            body { padding: 35px 24px; align-items: flex-start; }
            .stage-panel {
                width: 276px;
                height: 492px;
                max-width: 276px;
                padding: 39px 23.5px 39px 24.2px;
                border-radius: 2px;
            }
            .container { width: 229px; height: 447.8px; }
            .header-bar {
                height: 71px;
                min-height: 71px;
                padding: 21px 14px 16px 14.5px;
                flex-shrink: 0;
                flex-grow: 0;
            }
            .brand-name { margin: 1px 0 0 16px; }
            .brand-name img { height: 17.2px !important; width: 10px !important; object-fit: fill; }
            .header-date { font-size: 5.7px; letter-spacing: 0.8px; margin-right: 15.2px; margin-bottom: 0; }
            .card-content { padding: 25px 32px 9px 30.5px; flex-shrink: 0; }
            .card-content::before { margin: 9px 0 0 0; height: 0.1px; }
            .info-table { margin-bottom: 26.5px; margin-top: 2px; }
            .info-table .info-row { padding: 10px 0 0 1.3px; }
            .info-table .info-row:nth-child(2) { padding: 12px 0 0 1.3px; }
            .info-table .info-row:nth-child(3) { padding: 11.5px 0 0 1.3px; }
            .info-table .info-row:nth-child(4) { padding: 11.3px 0 0 1.3px; }
            .info-label { font-size: 5.7px; min-width: 54px; letter-spacing: 0.8px; }
            .info-value { font-size: 5.7px; letter-spacing: 0.75px; padding-right: 0; }
            .ticket-divider-wrap {
                margin: 10px -17px 8px -17px;
                height: 1px;
                background-image: repeating-linear-gradient(to right, #d0d0d0 0px, #d0d0d0 6px, transparent 6px, transparent 15px);
                background-size: 20px 1px;
            }
            .ticket-divider-wrap::before { width: 19px; height: 17px; left: -24px; }
            .ticket-divider-wrap::after { width: 17px; height: 17px; right: -23.5px; }
            .barcode-section {
                margin: 18px -16px 12px -16px;
                width: calc(100% + 32px);
                display: flex;
                flex-direction: column;
                align-items: center;
                text-align: center;
            }
            .barcode-container { margin: 0 6px; display: flex; justify-content: center; }
            .barcode-container img { padding-right: 6px; }
            .barcode-text { font-size: 5.9px; letter-spacing: 1.4px; margin: 4px 16px -12px 16px; padding-top: 5px; }
            .verified-pill {
                width: 83px;
                height: 27px;
                border-radius: 20px;
                font-size: 5.6px;
                letter-spacing: 0.8px;
                gap: 4px;
                margin-top: 6px;
                margin-bottom: -24px;
                padding-right: 3px;
                padding-bottom: 1px;
            }
            .verified-pill .check-icon { transform: translateX(-4.5px); }
            .verified-pill .check-icon-img { width: 9px; height: 9px; }
            .verified-pill span { padding-top: 1px; }
            .info-text { padding: 8px 12px 6.3px 11.5px; margin: 10px 0 0; border: 1px solid rgba(0,0,0,0.31); border-radius: 5px; }
            .info-text p { font-size: 5.2px; letter-spacing: 0.7px; margin-bottom: 2px; }
            .button-section { margin-top: 17px; }
            .btn { padding: 10px; font-size: 5.5px; letter-spacing: 0.8px; border-radius: 5px; font-weight: 400; }
            .btn-primary { margin-bottom: 6px; }
            .btn-secondary { border: none; }
            .card-content-bottom { padding-bottom: 13px; }
        }
    </style>
</head>
<body>
    <div class="stage-panel">
        <div class="container">
            <div class="header-bar">
                <div class="brand-name">
                    <img src="/image/prep.png" alt="Pre.pMood" style="height: 35.5px; width: auto;">
                </div>
                <div class="header-date" id="header-date"></div>
            </div>
            
            <div class="card-content">
                <div class="info-table">
                    <div class="info-row">
                        <span class="info-label">PRODUCT NAME</span>
                        <span class="info-value"><%= product.product_name %></span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">CODE</span>
                        <span class="info-value"><%= product.internal_code %></span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">DATE</span>
                        <span class="info-value"><%= verified_at %></span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">SERIAL NUMBER</span>
                        <span class="info-value">—</span>
                    </div>
                </div>
                
                <div class="ticket-divider-wrap"></div>
                
                <div class="barcode-section">
                    <div class="barcode-container" id="barcode-data" data-has-image="<%= product.digital_warranty_code ? '1' : '0' %>" data-digital-code="<%= (product.digital_warranty_code || '').replace(/&/g,'&amp;').replace(/"/g,'&quot;').replace(/</g,'&lt;').replace(/>/g,'&gt;') %>" data-internal-code="<%= (product.internal_code || '').replace(/&/g,'&amp;').replace(/"/g,'&quot;').replace(/</g,'&lt;').replace(/>/g,'&gt;') %>">
                        <% if (product.digital_warranty_code) { %>
                        <img id="barcode" src="" alt="바코드">
                        <% } else { %>
                        <svg id="barcode"></svg>
                        <% } %>
                    </div>
                    <div class="barcode-text" id="barcode-text"></div>
                </div>
            </div>
            
            <div class="card-content-bottom">
                <div style="text-align: center;">
                    <div class="verified-pill">
                        <div class="check-icon">
                            <img src="/image/checkicon.jpg" alt="" class="check-icon-img">
                        </div>
                        <span><%= typeof is_activation !== 'undefined' && is_activation ? '보증서 활성화 완료' : '정품 인증 완료' %></span>
                    </div>
                </div>
                
                <div class="info-text">
                    <% if (typeof is_activation !== 'undefined' && is_activation) { %>
                    <p>보증서가 성공적으로 활성화되었습니다.</p>
                    <p>활성화된 보증서는 양도 및 환불 정책이 적용됩니다.</p>
                    <% } else { %>
                    <p>디지털 보증서가 발급되었습니다.</p>
                    <p>발급된 보증서는 마이페이지 → 내 보증서에서 언제든 확인할 수 있습니다.</p>
                    <% } %>
                </div>
                
                <div class="button-section">
                    <% if (typeof warranty_public_id !== 'undefined' && warranty_public_id) { %>
                    <a href="<%= typeof is_activation !== 'undefined' && is_activation ? '/my-warranties.html' : '/digital-warranty.html' %>" class="btn btn-primary"><%= typeof is_activation !== 'undefined' && is_activation ? '보증서 목록 보기' : '보증서 확인하기' %></a>
                    <% } %>
                    <a href="/index.html" class="btn btn-secondary">홈으로 돌아가기</a>
                </div>
            </div>
        </div>
    </div>
    
    <script>
        function setHeaderDate() {
            var el = document.getElementById('header-date');
            if (el) {
                var d = new Date();
                el.textContent = d.getFullYear() + '-' + String(d.getMonth() + 1).padStart(2, '0') + '-' + String(d.getDate()).padStart(2, '0');
            }
        }
        
        (function() {
            var dataEl = document.getElementById('barcode-data');
            var hasBarcodeImage = dataEl && dataEl.getAttribute('data-has-image') === '1';
            var digitalWarrantyCode = ((dataEl && dataEl.getAttribute('data-digital-code')) || '').trim();
            var internalCode = ((dataEl && dataEl.getAttribute('data-internal-code')) || '').trim();
            
            function barcodeDisplayText() {
                if (digitalWarrantyCode) {
                    return 'PREPMOOD_' + digitalWarrantyCode.replace(/\s*·\s*/g, '').replace(/\s+/g, '_').trim().toUpperCase();
                }
                return internalCode ? 'PREPMOOD_' + internalCode.replace(/\s/g, '_').toUpperCase() : '';
            }
            
            function setBarcode() {
                var img = document.getElementById('barcode');
                var textEl = document.getElementById('barcode-text');
                if (!img) return;
                
                if (hasBarcodeImage && digitalWarrantyCode && img.tagName === 'IMG') {
                    var basePath = window.matchMedia('(min-width: 769px)').matches ? '/image/barcode/' : '/image/mobilebarcode/';
                    img.src = basePath + encodeURIComponent(digitalWarrantyCode) + '.webp';
                    img.onerror = function() {
                        var svg = document.createElement('svg');
                        svg.id = 'barcode';
                        img.parentNode.replaceChild(svg, img);
                        if (typeof JsBarcode !== 'undefined' && internalCode) {
                            try {
                                JsBarcode('#barcode', internalCode, { format: 'CODE128', width: 2, height: 60, displayValue: false, margin: 10 });
                                if (textEl) textEl.textContent = barcodeDisplayText();
                            } catch (e) { console.error(e); }
                        }
                    };
                    if (textEl) textEl.textContent = barcodeDisplayText();
                } else {
                    if (internalCode && typeof JsBarcode !== 'undefined') {
                        try {
                            JsBarcode('#barcode', internalCode, { format: 'CODE128', width: 2, height: 60, displayValue: false, margin: 10 });
                            if (textEl) textEl.textContent = barcodeDisplayText();
                        } catch (e) { console.error(e); }
                    }
                }
            }
            
            document.addEventListener('DOMContentLoaded', function() {
                setHeaderDate();
                setBarcode();
                window.matchMedia('(min-width: 769px)').addEventListener('change', setBarcode);
            });
        })();
    </script>
</body>
</html>